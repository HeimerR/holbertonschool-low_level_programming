CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

o_files: $(SRC)
	$(CC) $(CFLAGS) $(SRC) -c

clean:
	$(RM) -f *~ $(NAME)
oclean:
	$(RM) -f $(OBJ) 
fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)
re: oclean all
